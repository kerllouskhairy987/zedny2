generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model PowerFeatures {
  id        Int      @id @default(autoincrement())
  imageUrl  String
  title     String
  desc      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Team {
  id        Int      @id @default(autoincrement())
  src       String
  name      String
  position  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model User {
  id        Int      @id @default(autoincrement())
  username  String
  email     String   @unique
  password  String
  isAdmin   Boolean  @default(false)
  pan       Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Complaints {
  id        Int      @id @default(autoincrement())
  username  String
  email     String
  message   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
